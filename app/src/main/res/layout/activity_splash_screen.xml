<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".splash_screen"
    android:background="@color/ofwhite">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/animation_view"
        app:lottie_rawRes="@raw/logo_animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/t1"
        android:layout_height="50dp"
        android:gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:text="OS Helper"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/t2"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:text="20SE02IT028 Harsh Kanjiya"/>

    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="20SE02IT035  Isha Manore"/>

    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="20SE02IT036 Jash Mavani"/>


</LinearLayout>